extends layout

block content

  .contact

    form(role="form", class="form-horizontal")

      .form-group
        label(for="name", class="control-label col-sm-2") Name:
        .col-sm-10
          input(type="text", id=name, class="form-control")

      .form-group
        label(for="email", class="control-label col-sm-2") E-mail:
        .col-sm-10
          input(type="email", id=email, class="form-control")

      .form-group
        label(for="subject", class="control-label col-sm-2") Subject:
        .col-sm-10
          input(type="text", id=subject, class="form-control")

      .form-group
        label(for="message", class="control-label col-sm-2") Subject:
        .col-sm-10
          textarea(rows="7", id=message, class="form-control")
      .form-group
        .col-sm-offset-2.col-sm-10
          button(type="submit", class="btn btn-default") Send
