extends layout

block content
  .contact-wrapper
    h4.bldr-h4 Didn't find what you were looking for? Send us a message and we'll get back to you soon.

    form(role="form", class="form-horizontal")

      .form-group
        label(for="name", class="control-label col-sm-3") Name:
        .col-sm-9
          input(type="text", id=name, class="form-control")

      .form-group
        label(for="email", class="control-label col-sm-3") E-mail:
        .col-sm-9
          input(type="email", id=email, class="form-control")

      .form-group
        label(for="subject", class="control-label col-sm-3") Subject:
        .col-sm-9
          input(type="text", id=subject, class="form-control")

      .form-group
        label(for="message", class="control-label col-sm-3") Message:
        .col-sm-9
          textarea(rows="7", id=message, class="form-control")
      .form-group
        .col-sm-offset-3.col-sm-9
          button(type="submit", class="btn btn-default") Send
