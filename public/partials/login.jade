extends layout

block content
  .login-wrapper
    h4.bldr-h4 Input your e-mail and password to login.

    // Login form
    form(name="login", class="form-horizontal", method="POST", action="/login", enctype="application/x-www-form-urlencoded")

      .form-group
        label(for="email", class="control-label col-sm-3") E-mail:
        .col-sm-9
          input(name="email", type="email", id=email, class="form-control" required)

      .form-group
        label(for="password", class="control-label col-sm-3") Password:
        .col-sm-9
          input(name="password", type="password", id=password, class="form-control" required)

      .form-group
        .col-sm-offset-3.col-sm-9
          button(type="submit", class="btn btn-default") Login

    // Display error is there was one
    if (error)
      .error-message-area
        span(class="alert alert-danger") #{error}
