doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='../application.css')
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body
    block nav
      nav.container.navbar.navbar-default( role="navigation" )
        .navbar-header
          button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") #{title}

        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav.pull-right
            li.active: a( href="#") Home
            li: a( href="#about" ) About
            li: a( href="#contact" ) Contact

    block content

  script(src='bower_components/jquery/dist/jquery.js')
  script(src='bower_components/bootstrap-sass/assets/javascripts/bootstrap.js')
